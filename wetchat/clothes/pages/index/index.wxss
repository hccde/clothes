/**index.wxss**/

.userinfo {
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  display: inline-block;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-aboutme {
  display: flex;
}

.userinfo-function {
  padding-left: 20px;
  font-size: 13px;
}

.userinfo-nickname {
  font-size: 15px;
  padding-top: 10px;
  color: #333;
  font-weight: 400;
}

.userinfo-menu {
  margin-top: 18px;
  color: #999;
}

.usermotto {
  margin-top: 200px;
}

.hr-line {
  height: 2px;
  background: #eee;
  width: 100%;
}

.index-filter{
  height: 30px;
  line-height: 30px;
  text-align: right;
  font-size: 12px;
  color: #777;
}
.index-picker {
  
}

.index-picker:before {
  content: "";
  border: 6px solid #999;
  border-bottom: none;
  border-right-color: transparent;
  border-left-color: transparent;
  position: relative;
  top: 12px;
  left: 6px;
}

.index-picker:after {
  content: "";
  border: 6px solid #fff;
  border-bottom: none;
  border-right-color: transparent;
  border-left-color: transparent;
  position: relative;
  top: 10px;
  left: -6px;
}
.scroll-view-item{
  width: 50%;
  float: left;
}
.index-listitem-text{
  text-align: center;
  font-size: 13px;
  color: #666;
}
